{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "include": [
        "."
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
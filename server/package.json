{
  "name": "concil-of-foods-server",
  "author": "Nonhuman Nonsense",
  "license": "CC BY-NC 4.0",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "e2e-server": "cross-env NODE_ENV=test node dist/server.js",
    "dev": "cross-env NODE_ENV=development USE_TEST_OPTIONS=true nodemon --exec tsx server.ts",
    "proto": "cross-env NODE_ENV=prototype node dist/server.js",
    "protodev": "cross-env NODE_ENV=prototype nodemon --exec tsx server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:fast": "cross-env TEST_MODE=fast vitest run",
    "test:full": "cross-env TEST_MODE=full vitest run",
    "test:coverage": "vitest run --coverage",
    "docker": "docker build ../. -t nonhumannonsense/council-of-foods:latest --platform linux/amd64",
    "push": "docker push nonhumannonsense/council-of-foods:latest"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongodb": "^6.20.0",
    "openai": "^6.1.0",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "mongodb-memory-server": "^10.4.1",
    "nodemon": "^3.1.10",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "nodemonConfig": {
    "watch": [
      "server.ts",
      "src",
      "global-options.json",
      "test-options.json",
      "errorbot.ts",
      ".env"
    ],
    "ext": "ts,js,json"
  }
}
